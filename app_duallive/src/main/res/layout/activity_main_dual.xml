<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <Button
        android:id="@+id/startSysbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_open_camera_with_sys"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_active_hint"/>


    <EditText
        android:id="@+id/appIdEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_active_hint1"/>

    <Button
        android:id="@+id/grantBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/text_active"/>

    <TextView
        android:id="@+id/hintTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"/>

</LinearLayout>
